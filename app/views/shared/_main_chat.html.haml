.main-chat
  / ヘッダー
  .main-chat__header
    .main-chat__header__group-box
      .main-chat__header__group-box__group-name
        = @group.name
      .main-chat__header__group-box__group-member
        = "Member：#{@group.show_member}"
    .main-chat__header__edit-box
      = link_to edit_group_path(@group.id), class: "main-chat__header__edit-box__edit-btn" do
        Edit
  
  / メイン画面
  .main-chat__messages
    = render @messages

  / メッセージ入力フォーム
  .main-chat__form
    = form_for [@group, @message] , html: { class: 'main-chat__form__new-message'}  do |f| 
      .main-chat__form__new-message__input-box
        = f.text_field :content, class: 'main-chat__form__new-message__input-box__text' ,placeholder: 'type a message'
        / label for →画像アイコンをクリックでファイル選択できるようにする
        = f.label :image, class: 'main-chat__form__new-message__input-box__image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'main-chat__form__new-message__input-box__image__input'
      = f.submit 'Send', class: 'main-chat__form__new-message__submit'
